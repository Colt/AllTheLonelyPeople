body
    color #333
    font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
    font-size: 1.7em;
    line-height: 1.4em;
    text-align center
img
    position relative

.header
    h1
        text-align center
        line-height:1.2em
        margin-top:32px
        margin-bottom:12px
    small
        display block
        text-align center
        margin-top 10px

.container
    width 800px
    margin-left auto
    margin-right auto


ul
    padding-top 20px
    border-top 1px solid #bbb
    margin-left 0
    padding-left 0
    display inline-block

    li
        margin 10px 10px
        list-style none
        display inline-block
        width 140px
        height 300px
        box-shadow 0 0 10px #666
        text-align center
        color #fff
        padding-top 60px
        font-size 20px
        font-weight bold
        text-overflow ellipsis
        overflow hidden
        white-space nowrap
        box-sizing border-box
